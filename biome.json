{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "style": {
        "noImplicitBoolean": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "error",
          "options": {}
        },
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "zod": "zodを直接importするのみだと日本語対応がされません。@/lib/zod を使用してください。"
            }
          }
        }
      }
    }
  },
  "files": {
    "ignore": ["**/node_modules/**", "**/*.json", ".next/**"]
  }
}
