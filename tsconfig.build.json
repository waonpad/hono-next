{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "exclude": [
    "node_modules",
    "src/testing/**/*",
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/**/__stories__/**/*",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ]
}
